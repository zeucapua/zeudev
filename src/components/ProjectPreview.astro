---
import { Icon } from "astro-icon";
import { Image } from "astro:assets";

const { title, description, link, image, icons } = Astro.props;
---

<style lang="css">
  [astro-icon] { color: white; fill: white; }
</style>

<section class="flex flex-col gap-4 lg:gap-8 w-full lg:min-w-[32rem] bg-sky-500/50 border-8 border-sky-500 p-4 lg:p-8 rounded-xl">
  <a href={link} target="_blank"> 
    <Image {...image} class="rounded-xl hover:scale-105 transition-all duration-300 shadow-lg" />
  </a>
  <section class="flex flex-col h-full justify-between gap-4">
    <div class="flex flex-col lg:flex-row justify-between items-center">
      <h1 class="text-xl lg:text-3xl font-bold">{ title }</h1>
      <div class="flex gap-4 items-center border-2 border-dashed px-4 py-2 rounded-xl">
      { 
        icons.map((i : string) => (
          <Icon name={i} class="w-4 lg:w-6" />
        ))
      }
      </div>
    </div>
  
    <p>{ description }</p>
  </section>
</section>
